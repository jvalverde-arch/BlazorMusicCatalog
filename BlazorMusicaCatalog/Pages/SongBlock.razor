
<table class="table">
    <tr>
        <td>Name</td>
        <td><input class="form-control" type="text" @bind="Song.Name"/></td>
    </tr>
    <tr>
        <td>Upload</td>
        <td><InputFile/></td>
    </tr>
    <tr>
     
        <td><button @onclick="UpdateValueSong">Update</button></td>
    </tr>
</table>

@code {
    [Parameter]
    public Song Song{ get; set; }

    [Parameter]
    public EventCallback<Song> OnSongChanged { get; set; }

    async Task UpdateValueSong()
    {
        await OnSongChanged.InvokeAsync(Song);
    }
}
